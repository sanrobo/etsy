<h1>Listing Listings</h1>
<div class="row">
 <% @listings.each do |listing| %>
   <div class="col-md-4">
   <div class="thumbnail">
      <%= image_tag listing.image.url(:thumb) %>
      <div class="caption">
        <h3><%= listing.name %> | <%= number_to_currency(listing.price) %> </h3>
        <p> <%= listing.description %></p>
        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
        <p><%= link_to 'Show',listing ,class:"btn btn-link" %> <br/>
        <%= link_to 'Edit', edit_listing_path(listing),class:"btn btn-link" %> <br/>
        <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-link"%></p>
      </div>
    </div>
   </div>
 <% end %>
</div>

<%= link_to 'New Listing', new_listing_path %>
